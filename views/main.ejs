<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>POS</title>
    <link href="https://getbootstrap.com/docs/5.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="./stylesheets/home.css">
</head>

<body>

    <div class="container-fluid mt-1 ">
        <div>
            <!-- // Content -->
            <div class="row ">
                <%- include('./component/navbar.ejs') -%>
                    <div class="col-sm-2 col-md-2 col-lg-1  bg-light ">
                        <%- include('./component/sidebar.ejs') -%>
                    </div>
                    <div class="col-sm-10 col-md-10 col-lg-7  ">
                        <div class="mt-4">
                            <div class="p-3">
                                <div class="row product-list-container ">
                                    <% products.forEach(product=> { %>
                                        <div class="col-xs-6 col-sm-6 col-md-4  col-lg-3 mb-5 text-center position-relative   btnhover "
                                            onmouseover="showAddToCartButton(this)"
                                            onmouseout="hideAddToCartButton(this)">
                                            <div class="card  product-card flex-sm-row flex-md-column h-100 ">
                                                <img src="/images/<%= product.product_image %>" class="img-thumbnail"
                                                    alt="image">
                                                <div class="p-2 text-overlay ">
                                                    <h1 class="card-title">
                                                        <%= product.product_name %>
                                                    </h1>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span class="catalog">CATALOG</span>
                                                        <span class="text-danger">
                                                            <%= product.product_price %>à¸¿
                                                        </span>

                                                    </div>

                                                </div>

                                                <form method="post" action="/add_cart" class="add-form">
                                                    <input type="hidden" name="product_id"
                                                        value="<%= product.product_id %>" />
                                                    <input type="hidden" name="product_name"
                                                        value="<%= product.product_name %>" />
                                                    <input type="hidden" name="product_price"
                                                        value="<%= product.product_price %>" />

                                                    <input type="hidden" name="product_image"
                                                        value="<%= product.product_image %>" />

                                                    <input type="submit" class="btn btn-warning add-to-cart-button"
                                                        value="Add to Cart" style="display: none;" />
                                                </form>
                                            </div>

                                        </div>
                                        <% }) %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-4">
                        <div class="bg-light">
                            <div class="card-header d-flex justify-content-between">
                                <b>ORDER#</b>
                                <b>12345678</b>
                            </div>
                            <div class="card-body">
                                <%- include('./component/cart.ejs') -%>
                            </div>
                        </div>
                    </div>
            </div>
            <!-- // Content end -->
            <br />

        </div>
    </div>
</body>

</html>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>

    function showAddToCartButton(btnhover) {
        var addToCartButton = btnhover.querySelector('.add-to-cart-button');
        addToCartButton.style.display = 'block';
    }

    function hideAddToCartButton(btnhover) {
        var addToCartButton = btnhover.querySelector('.add-to-cart-button');
        addToCartButton.style.display = 'none';
    }
</script>